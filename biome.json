{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["**", "!**/*.generated.ts", "!!**/dist"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "domains": {
      "project": "recommended",
      "react": "recommended"
    },
    "rules": {
      "correctness": {
        "useImportExtensions": "warn"
      },
      "style": {
        "useBlockStatements": "warn"
      }
    }
  }
}
