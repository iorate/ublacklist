    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es2019.string", "dom", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",
    "newLine": "LF",
    "sourceMap": true,
    "strict": true,
